---
import Navigation from "./Navigation.astro";
import ThemeToggle from "../ThemeToggle/ThemeToggle.astro";
import "./Header.css";
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">
      <img
        src="/newslogo.png"
        alt="The Quantum Gazette Logo"
        class="logo-img"
      />
      <span class="logo-text">The Quantum Gazette</span>
    </a>
    <div class="header-right">
      <Navigation />
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .header-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }
</style>
